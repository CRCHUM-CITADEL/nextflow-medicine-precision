Bootstrap: docker
From: rocker/r-ver:4.5.1

%post
    # update and install base packages
    R -e "install.packages(c('ggplot2', 'dplyr', 'data.table', 'optparse', 'stringr'))"

%environment
    export PATH=/usr/local/bin:$PATH

%labels
    Version 4.5.1
    Description r and various packages

%runscript
    # Default behavior when running the container without specifying a command
    # You can change this, or override with `apptainer exec ...`
    exec /bin/bash "$@"
